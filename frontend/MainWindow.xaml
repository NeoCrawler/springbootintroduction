<Window x:Class="SpringBootInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpringBootInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
        <Button x:Name="btnGetQuestion" Width="150" Height="40" FontSize="20" VerticalAlignment="Center" 
                HorizontalAlignment="Center" Content="Get Question" BorderThickness="1" Click="btnGetQuestion_Click">
            
        </Button>

        <TextBlock x:Name="txtQuestion" Height="40" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch"> Question</TextBlock>

        <StackPanel x:Name="pnlAwnsers">
            
        </StackPanel>

        <TextBlock x:Name="txtResult" Visibility="Hidden" Height="40" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch"> Question</TextBlock>

    </StackPanel>
</Window>
